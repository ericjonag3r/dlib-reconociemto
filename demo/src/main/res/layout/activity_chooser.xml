<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_90"
    tools:context=".Activities.ChooserActivity">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:titleTextColor="#fff"
        android:id="@+id/chooserToolbar">


    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chooserToolbar"
     android:gravity="center">






    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:id="@+id/trainImagesCardView"
        android:layout_below="@+id/chooserToolbar"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="5dp">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/gradient_holo_pink_cate" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView

                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="2dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_camera" />

            <TextView

                android:layout_width="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Train Faces"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="18sp" />


        </LinearLayout>




    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:id="@+id/cardViewRecognize"
        android:layout_below="@+id/trainImagesCardView"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="5dp">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/gradient_holo_brown_category" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="2dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_camera" />

            <TextView

                android:layout_width="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Recognize"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="18sp" />


        </LinearLayout>




    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:id="@+id/cardViewAddPersons"
        android:layout_below="@+id/cardViewRecognize"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/iv_category_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/gradient_holo_gray" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_category_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="2dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_face" />

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Add Faces"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="18sp" />


        </LinearLayout>




    </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>